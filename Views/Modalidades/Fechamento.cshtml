@model IEnumerable<WebLavApp.Models.Modalidades>
@{
    ViewData["Title"] = "Relatório por Modalidade";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Modalidade</th>
                <th class="text-end">Quantidade Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Total)
            {
                <tr>
                    <td>@item.Modalidade</td>
                    <td class="text-end">@item.Quantidade</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="fw-bold">
                <td>Total Geral</td>
                <td class="text-end">@ViewBag.TotalGeral</td>
            </tr>
        </tfoot>
    </table>
</div>

<!-- Botão opcional para exportar -->
<div class="text-end mt-3">
    <a href="#" class="btn btn-success">
        <i class="bi bi-file-earmark-excel"></i> Exportar para Excel
    </a>
    <a href="Index" class="btn btn-secondary">Voltar</a>
</div>