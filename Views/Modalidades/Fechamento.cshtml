@model List<WebLavApp.Models.Modalidades>

@{
    ViewData["Title"] = "Fechamento Mensal";
    var mes = ViewData["mes"];
    var total = ViewBag.Total ?? 0;
}

<h2>Fechamento Mensal</h2>

<form method="get" asp-action="Fechamento" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label for="data" class="form-label">Mês</label>
            <select name="data" id="data" class="form-control">
                <option value="">Selecione...</option>
                @for (int i = 1; i <= 12; i++)
                {
                    var isSelected = mes != null && mes.ToString() == i.ToString();
                    <option value="@i" selected="@(isSelected ? "selected" : null)">
                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <p>
        <strong>Mês:</strong> 
        @(mes != null && int.TryParse(mes.ToString(), out var mesInt) 
            ? System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mesInt) 
            : "Todos")
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Modalidade</th>
                <th>Data</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Modalidade</td>
                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                    <td>@item.Quantidade</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Total do Mês: @total</h4>
}
else
{
    <div class="alert alert-warning">Nenhum registro encontrado para o filtro aplicado.</div>
}
