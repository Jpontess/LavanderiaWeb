@model IEnumerable<WebLavApp.Models.ServicoInterno>

@{
    ViewData["Title"] = "Serviços Internos";
}

<h1>@ViewData["Title"]</h1>

<!-- Formulário de Filtros -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-filter"></i> Filtros
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="filtroNome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="filtroNome" name="filtroNome" 
                       value="@ViewData["FiltroNome"]" placeholder="Filtrar por nome">
            </div>
            
            <div class="col-md-3">
                <label for="filtroDepartamento" class="form-label">Departamento</label>
                <select class="form-select" id="filtroDepartamento" name="filtroDepartamento">
                    <option value="">Todos</option>
                    @foreach (var depto in ViewBag.Departamentos)
                    {
                        <option value="@depto" selected="@(ViewData["FiltroDepartamento"]?.ToString() == depto)">
                            @depto
                        </option>
                    }
                </select>
            </div>
            
            <div class="col-md-3">
                <label for="filtroDataInicio" class="form-label">Data Início</label>
                <input type="date" class="form-control" id="filtroDataInicio" name="filtroDataInicio" 
                       value="@ViewData["FiltroDataInicio"]">
            </div>
            
            <div class="col-md-3">
                <label for="filtroDataFim" class="form-label">Data Fim</label>
                <input type="date" class="form-control" id="filtroDataFim" name="filtroDataFim" 
                       value="@ViewData["FiltroDataFim"]">
            </div>
            
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-undo"></i> Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Fechamento" class="btn btn-primary">Visualizar Fechamento Mensal</a>
</p>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Serviço</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Departamento)</th>
            <th>@Html.DisplayNameFor(model => model.Material)</th>
            <th>@Html.DisplayNameFor(model => model.Cor)</th>
            <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Departamento)</td>
                <td>@Html.DisplayFor(modelItem => item.Material)</td>
                <td>@Html.DisplayFor(modelItem => item.Cor)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
